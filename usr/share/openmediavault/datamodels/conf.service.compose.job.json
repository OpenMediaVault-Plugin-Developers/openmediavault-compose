{
  "type": "config",
  "id": "conf.service.compose.job",
  "title": "compose backup scheduled job",
  "queryinfo": {
    "xpath": "//services/compose/jobs/job",
    "iterable": true,
    "idproperty": "uuid"
  },
  "properties": {
    "uuid": {
      "type": "string",
      "format": "uuidv4"
    },
    "enable": {
      "type": "boolean",
      "default": false
    },
    "filter": {
      "type": "string",
      "default": ""
    },
    "backup": {
      "type": "boolean",
      "default": true
    },
    "prebackup": {
      "type": "string",
      "default": ""
    },
    "postbackup": {
      "type": "string",
      "default": ""
    },
    "update": {
      "type": "boolean",
      "default": false
    },
    "prune": {
      "type": "boolean",
      "default": false
    },
    "sendemail": {
      "type": "boolean",
      "default": false
    },
    "comment": {
      "type": "string",
      "default": ""
    },
    "excludes": {
      "type": "string",
      "default": ""
    },
    "execution": {
      "type": "string",
      "enum": [
        "exactly",
        "hourly",
        "daily",
        "weekly",
        "monthly",
        "yearly",
        "reboot"
      ],
      "default": "exactly"
    },
    "minute": {
      "type": "string",
      "pattern": "^[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]|[*]$",
      "default": 0
    },
    "everynminute": {
      "type": "boolean",
      "default": false
    },
    "hour": {
      "type": "string",
      "pattern": "^[0-9]|1[0-9]|2[0-3]|[*]$",
      "default": 0
    },
    "everynhour": {
      "type": "boolean",
      "default": false
    },
    "month": {
      "type": "string",
      "pattern": "^[1-9]|1[0-2]|[*]$",
      "default": "*"
    },
    "dayofmonth": {
      "type": "string",
      "pattern": "^[1-9]|1[0-9]|2[0-9]|3[0-1]|[*]$",
      "default": "*"
    },
    "everyndayofmonth": {
      "type": "boolean",
      "default": false
    },
    "dayofweek": {
      "type": "string",
      "pattern": "^[1-7]|[*]$",
      "default": "*"
    }
  }
}
