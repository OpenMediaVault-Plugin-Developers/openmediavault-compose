{
  "type": "config",
  "id": "conf.service.compose",
  "title": "compose",
  "queryinfo": {
    "xpath": "//services/compose",
    "iterable": false
  },
  "properties": {
    "sharedfolderref": {
      "type": "string",
      "oneOf": [
        {
          "type": "string",
          "format": "uuidv4"
        },
        {
          "type": "string",
          "maxLength": 0
        }
      ]
    },
    "composeowner": {
      "type": "string",
      "default": "root"
    },
    "composegroup": {
      "type": "string",
      "default": "root"
    },
    "mode": {
      "type": "string",
      "default": "700"
    },
    "fileperms": {
      "type": "string",
      "default": "600"
    },
    "datasharedfolderref": {
      "type": "string",
      "oneOf": [
        {
          "type": "string",
          "format": "uuidv4"
        },
        {
          "type": "string",
          "maxLength": 0
        }
      ]
    },
    "backupsharedfolderref": {
      "type": "string",
      "oneOf": [
        {
          "type": "string",
          "format": "uuidv4"
        },
        {
          "type": "string",
          "maxLength": 0
        }
      ]
    },
    "backupmaxsize": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "default": 1
    },
    "dockerStorage": {
      "type": "string",
      "default": "/var/lib/docker"
    },
    "dockersharedfolderref": {
      "type": "string",
      "oneOf": [
        {
          "type": "string",
          "format": "uuidv4"
        },
        {
          "type": "string",
          "maxLength": 0
        }
      ]
    },
    "logmaxsize": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "default": 50
    },
    "liverestore": {
      "type": "boolean"
    },
    "podmanStorage": {
      "type": "string",
      "default": "/var/lib/containers/storage"
    },
    "podmansharedfolderref": {
      "type": "string",
      "oneOf": [
        {
          "type": "string",
          "format": "uuidv4"
        },
        {
          "type": "string",
          "maxLength": 0
        }
      ]
    },
    "urlHostname": {
      "type": "string",
      "default": ""
    },
    "cachetimefiles": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "default": 60
    },
    "cachetimeservices": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "default": 60
    },
    "cachetimestats": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "default": 60
    },
    "cachetimeimages": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "default": 60
    },
    "cachetimenetworks": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "default": 60
    },
    "cachetimevolumes": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "default": 60
    },
    "cachetimecontainers": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "default": 60
    },
    "showcmd": {
      "type": "boolean"
    },
    "podman": {
      "type": "boolean"
    },
    "runconfig": {
      "type": "boolean"
    },
    "files": {
      "type": "object",
      "properties": {
        "file": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "uuid": {
                "type": "string",
                "format": "uuidv4"
              },
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "body": {
                "type": "string"
              },
              "showenv": {
                "type": "boolean"
              },
              "env": {
                "type": "string"
              },
              "showoverride": {
                "type": "boolean"
              },
              "override": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "configs": {
      "type": "object",
      "properties": {
        "config": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "uuid": {
                "type": "string",
                "format": "uuidv4"
              },
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "fileref": {
                "type": "string",
                "format": "uuidv4"
              },
              "body": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "dockerfiles": {
      "type": "object",
      "properties": {
        "dockerfile": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "uuid": {
                "type": "string",
                "format": "uuidv4"
              },
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "body": {
                "type": "string"
              },
              "script": {
                "type": "string"
              },
              "scriptfile": {
                "type": "string"
              },
              "conf": {
                "type": "string"
              },
              "conffile": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "jobs": {
      "type": "object",
      "properties": {
        "job": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "uuid": {
                "type": "string",
                "format": "uuidv4"
              },
              "enable": {
                "type": "boolean"
              },
              "filter": {
                "type": "string"
              },
              "backup": {
                "type": "boolean"
              },
              "prebackup": {
                "type": "string"
              },
              "postbackup": {
                "type": "string"
              },
              "update": {
                "type": "boolean"
              },
              "prune": {
                "type": "boolean"
              },
              "filestart": {
                "type": "boolean"
              },
              "filestop": {
                "type": "boolean"
              },
              "filebuild": {
                "type": "boolean"
              },
              "filepull": {
                "type": "boolean"
              },
              "filenocache": {
                "type": "boolean"
              },
              "sendemail": {
                "type": "boolean"
              },
              "verbose": {
                "type": "boolean"
              },
              "comment": {
                "type": "string"
              },
              "excludes": {
                "type": "string"
              },
              "execution": {
                "type": "string",
                "enum": [
                  "exactly",
                  "hourly",
                  "daily",
                  "weekly",
                  "monthly",
                  "yearly",
                  "reboot"
                ],
                "default": "exactly"
              },
              "minute": {
                "type": "string",
                "pattern": "^[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]|[*]$",
                "default": 0
              },
              "everynminute": {
                "type": "boolean",
                "default": false
              },
              "hour": {
                "type": "string",
                "pattern": "^[0-9]|1[0-9]|2[0-3]|[*]$",
                "default": 0
              },
              "everynhour": {
                "type": "boolean",
                "default": false
              },
              "month": {
                "type": "string",
                "pattern": "^[1-9]|1[0-2]|[*]$",
                "default": "*"
              },
              "dayofmonth": {
                "type": "string",
                "pattern": "^[1-9]|1[0-9]|2[0-9]|3[0-1]|[*]$",
                "default": "*"
              },
              "everyndayofmonth": {
                "type": "boolean",
                "default": false
              },
              "dayofweek": {
                "type": "string",
                "pattern": "^[1-7]|[*]$",
                "default": "*"
              }
            }
          }
        }
      }
    },
    "globalenv": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "globalenv": {
          "type": "string"
        }
      }
    }
  }
}
