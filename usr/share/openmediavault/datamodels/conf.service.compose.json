{
  "type": "config",
  "id": "conf.service.compose",
  "title": "compose",
  "queryinfo": {
    "xpath": "//services/compose",
    "iterable": false
  },
  "properties": {
    "sharedfolderref": {
      "type": "string",
      "oneOf": [
        {
          "type": "string",
          "format": "uuidv4"
        },
        {
          "type": "string",
          "maxLength": 0
        }
      ]
    },
    "composeowner": {
      "type": "string",
      "default": "root"
    },
    "composegroup": {
      "type": "string",
      "default": "root"
    },
    "mode": {
      "type": "string",
      "default": "700"
    },
    "fileperms": {
      "type": "string",
      "default": "600"
    },
    "datasharedfolderref": {
      "type": "string",
      "oneOf": [
        {
          "type": "string",
          "format": "uuidv4"
        },
        {
          "type": "string",
          "maxLength": 0
        }
      ]
    },
    "backupsharedfolderref": {
      "type": "string",
      "oneOf": [
        {
          "type": "string",
          "format": "uuidv4"
        },
        {
          "type": "string",
          "maxLength": 0
        }
      ]
    },
    "backupmaxsize": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "default": 1
    },
    "dockerStorage": {
      "type": "string",
      "default": "/var/lib/docker"
    },
    "files": {
      "type": "object",
      "properties": {
        "file": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "uuid": {
                "type": "string",
                "format": "uuidv4"
              },
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "body": {
                "type": "string"
              },
              "env": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "dockerfiles": {
      "type": "object",
      "properties": {
        "dockerfile": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "uuid": {
                "type": "string",
                "format": "uuidv4"
              },
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "body": {
                "type": "string"
              },
              "script": {
                "type": "string"
              },
              "scriptfile": {
                "type": "string"
              },
              "conf": {
                "type": "string"
              },
              "conffile": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "jobs": {
      "type": "object",
      "properties": {
        "job": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "uuid": {
                "type": "string",
                "format": "uuidv4"
              },
              "enable": {
                "type": "boolean"
              },
              "filter": {
                "type": "string"
              },
              "sendemail": {
                "type": "boolean"
              },
              "comment": {
                "type": "string"
              },
              "execution": {
                "type": "string"
              },
              "minute": {
                "type": "string"
              },
              "everynminute": {
                "type": "boolean"
              },
              "hour": {
                "type": "string"
              },
              "everynhour": {
                "type": "boolean"
              },
              "month": {
                "type": "string"
              },
              "dayofmonth": {
                "type": "string"
              },
              "everyndayofmonth": {
                "type": "boolean"
              },
              "dayofweek": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
